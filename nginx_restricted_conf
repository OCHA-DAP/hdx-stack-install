    error_page 418 = @bypassauth;
    if ($http_user_agent = "Hello! I'm David.") {
        return 418;
    }

    if ($http_user_agent = "HDX-Simon") {
        return 418;
    }

    auth_basic "HDX restricted site";
    auth_basic_user_file /etc/nginx/hdx-datapass;

    # fill in the remote_addr with x-real-ip content
    # set_real_ip_from 172.17.42.1;
    set_real_ip_from 10.66.32.65;
    allow 127.0.0.1;
    allow 172.17.0.0/16;
    #allow 192.168.0.0/16;
    allow 10.66.32.110;
    allow 10.66.32.109;
    allow 10.66.32.108;
    deny all;

    satisfy any;
