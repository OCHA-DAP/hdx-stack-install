# update the system and install minimal required stuff
apt-get -qq update;
apt-get -qq upgrade;
apt-get -qq -y install tmux mc gettext-base python-pip git

# install latest docker
curl -sSL https://get.docker.com/ubuntu/ | sudo sh

# customize the docker aufs location
mkdir -p /data
echo "DOCKER_OPTS=\"-g /data/docker\"" >> /etc/default/docker
restart docker

# install docker tools
curl --fail -L -O \
    https://github.com/phusion/baseimage-docker/archive/master.tar.gz
tar xzf master.tar.gz
./baseimage-docker-master/install-tools.sh
rm -rf master.tar.gz
rm -rf baseimage-docker-master

# install fig (and pip if it's not yet installed)
which pip > /dev/null
[ $? -eq 0 ] || apt-get install python-pip

pip install fig
