echo "Cloning the private HDX repo:"
git clone https://hdx-user@bitbucket.org/teodorescuserban/hdx-install-private.git
if [ $? -ne 0 ]; then
    echo "Private repo cloning failed! Start again!"
    exit 1
fi
echo "Done."
echo "Please edit public vars."
sleep 2
mcedit hdx-install/set_vars
source hdx-install/set_vars
source hdx-install-private/2b_set_prv_vars
source hdx-install/stamp_fig
echo "fig file created. inspect it."
sleep 5
mcedit fig.yml
echo "You are ready to start the HDX environment!"
